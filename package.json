{
  "name": "maximize-canvas",
  "version": "1.0.2",
  "description": "Make canvas occupy entire browser window within provided resolution constraints",
  "main": "index.js",
  "scripts": {
    "beefy": "./node_modules/.bin/beefy",
    "demo": "./node_modules/.bin/beefy demo.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "make": "./node_modules/.bin/browserify index.js --s maximize_canvas > lib/maximize_canvas.js",
    "uglify": "./node_modules/.bin/uglifyjs lib/maximize_canvas.js -c > lib/maximize_canvas.min.js "
  },
  "keywords": [
    "canvas",
    "resize",
    "maximize",
    "fullscreen",
    "fit",
    "screen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sergebat/maximize-canvas.git"
  },
  "author": "Sergey Batishchev",
  "license": "MIT",
  "dependencies": {
    "fit-rect": "^1.0.2",
    "aspect-to-rect": "0.0.1"
  },
  "devDependencies": {
    "beefy": "^2.1.8",
    "browserify": "^14.3.0",
    "uglify-js": "^3.0.1"
  }
}
